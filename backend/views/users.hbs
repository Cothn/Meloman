<!DOCTYPE html>
<html>
<head>
    <title>Список пользователей</title>
    <meta charset="utf-8" />
</head>
<body>
<a href="/users/create">Добавить пользователя</a>
<h1>Список пользователей</h1>
<table>
    <tr><th>Id</th><th>Nickname</th><th>login</th><th>password</th><th>edit</th><th>delete</th></tr>
    {{#each users}}
        <tr><td>{{this.id}}</td><td>{{this.nickname}}</td>
            <td>{{this.login}}</td><td>{{this.password}}</td>
            <td>
                <a href="/users/edit/{{this.id}}">Edit</a>
            </td>
            <td>
                <form action="/users/delete/{{this.id}}" method="POST" style="display:inline;">
                    <input type="submit" value="Delete" />
                </form>
            </td><tr>
    {{/each}}
</table>
</body>
<html>